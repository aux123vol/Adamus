# Adamus Environment Configuration
# Copy this to .env and fill in your values
# NEVER commit .env to git

# Claude API (Level 1-2 data only)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Ollama (Local, Level 3-4 data)
OLLAMA_HOST=http://localhost:11434

# Database
ADAMUS_DB_PATH=~/.adamus/memory.db

# Logging
LOG_LEVEL=INFO
LOG_PATH=./logs

# Budget Controls
MONTHLY_BUDGET_USD=200.00
BUDGET_ALERT_THRESHOLD=0.75

# Security
SECURITY_MODE=strict  # strict, normal, debug
PPAI_ENABLED=true
